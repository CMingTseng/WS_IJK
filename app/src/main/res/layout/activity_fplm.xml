    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ws.ijk.ws_ijk.FPLMActivity">

    <com.ws.ijk.wsqj_ijkplayer.widget.LianMaiSplitScreen.LMFlowGroupView
        android:id="@+id/LMFlowGroupView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ws.ijk.wsqj_ijkplayer.widget.LianMaiSplitScreen.AspectTextureView
            android:id="@+id/txv_preview"
            android:layout_width="match_parent"
