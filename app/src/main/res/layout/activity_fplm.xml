    <Button
        android:id="@+id/LM"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:text="连麦"/>

    <Button
        android:id="@+id/LMHF"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content"
        android:text="恢复"/>

</FrameLayout>
